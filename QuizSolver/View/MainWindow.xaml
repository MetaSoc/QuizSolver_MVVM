<Window x:Class="QuizSolver.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizSolver"
        mc:Ignorable="d"
        Title="QuizSolver" Height="800" Width="1300"
        WindowStartupLocation="CenterScreen"
        MinHeight="500" MinWidth="900" Icon="/View/quiz.png" BorderThickness="5" BorderBrush="DarkRed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="1*" MinWidth="220"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <!-- Title "QUIZ SOLVER" -->
        <Grid Row="1" Column="2">
            <TextBlock Text="QUIZ SOLVER" FontSize="55" TextAlignment="Center" Padding="10,0,10,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>

            <TextBlock Text="QUIZ SOLVER" FontSize="54" Padding="7,0,10,5" VerticalAlignment="Center" Foreground="DarkRed" HorizontalAlignment="Center"/>
        </Grid>

        <!-- Timer -->
        <Grid Row="1" Column="3">
            <TextBlock Text="00:00:00" FontSize="50" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>

        <!-- Quiz Select -->
        <Grid Row="2" Column="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Grid Row="0" Margin="10,0">
                <Border BorderBrush="Black" Background="Transparent" BorderThickness="0,0,0,1"/>
            </Grid>

            <Border Grid.Row="0" BorderBrush="Black" Background="Transparent" BorderThickness="2" Grid.RowSpan="2" CornerRadius="10"/>

            <!-- Chose Quiz: -->
            <TextBlock Grid.Row="0" Text="Chose Quiz:" FontSize="40" FontWeight="Thin" TextAlignment="Center" VerticalAlignment="Center"/>
            <!-- Quiz List -->
            <ComboBox Grid.Row="1" Padding="10" Height="40" Width="190" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                <ComboBoxItem Content="Quiz1"/>
                <ComboBoxItem Content="Quiz2"/>
                <ComboBoxItem Content="Quiz3"/>
            </ComboBox>
        </Grid>

        <!-- Question -->
        <Grid Row="2" Column="2" Margin="15, 0">
            <Border BorderBrush="Black" BorderThickness="0,0,0,1">
                <TextBlock Text="PYTANIE_1: Dlaczego Szymon jest takim głombem xDDDDDDD?" FontSize="25" TextWrapping="Wrap"
                VerticalAlignment="Center"/>
            </Border>
        </Grid>

        <!-- Start/Stop -->
        <Grid Row="2" Column="3" MaxHeight="85">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" x:Name="StartButton" Content="Start" Margin="10" FontSize="40" Command="{Binding StartClick}"/>
            <Button Grid.Column="1" x:Name="StopButton" Content="Stop" Margin="10" FontSize="40" Command="{Binding StopClick}"/>
        </Grid>

        <!-- Answers -->
        <Grid Row="3" Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button x:Name="OdpAButton" Content="ODPOWIEDZ" FontSize="50"/>
                <Button x:Name="OdpBButton" Content="ODPOWIEDZ" FontSize="50"/>
            </StackPanel>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button x:Name="OdpCButton" Content="ODPOWIEDZ" FontSize="50"/>
                <Button x:Name="OdpDButton" Content="ODPOWIEDZ" FontSize="50"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
